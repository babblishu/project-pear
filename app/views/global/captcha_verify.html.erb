<%= form_tag captcha_verify_submit_path, class: 'form-horizontal', method: :get do %>
  <fieldset>
    <legend>
      <strong><%= t '.title' %></strong>
    </legend>
    <div class="control-group">
      <label for="captcha-input" class="control-label"><%= t '.captcha' %></label>
      <div class="controls">
        <input id="captcha-input" type="text" name="captcha" maxlength="10">
        <%= captcha_tag id: 'captcha', style: 'cursor: pointer;' %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <button type="submit" class="btn btn-primary"><%= t '.submit' %></button>
      </div>
    </div>
  </fieldset>
<% end %>
